{
  "profiles": {
    "vcs/user-repos": {
      "version": "1.0.1",
      "providers": {
        "github": {},
        "bitbucket": {}
      }
    },
    "communication/send-email": {
      "version": "1.0.1",
      "providers": {
        "sendgrid": {
          "defaults": {
            "SendEmail": {
              "input": {
                "from": "hello@superface.org"
              }
            }
          }
        }
      }
    }
  },
  "providers": {
    "github": {
      "security": []
    },
    "bitbucket": {
      "security": [
        {
          "id": "basic",
          "username": "$BITBUCKET_USERNAME",
          "password": "$BITBUCKET_PASSWORD"
        }
      ]
    },
    "mock": {
      "security": []
    },
    "sendgrid": {
      "security": [
        {
          "id": "bearer_token",
          "token": "$SENDGRID_TOKEN"
        }
      ]
    }
  }
}